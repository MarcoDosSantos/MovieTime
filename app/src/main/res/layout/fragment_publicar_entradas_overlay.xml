<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b7000000"
    tools:context="com.example.yonoc.coverflow.View.ActividadCompartir.PublicarEntrada.PublicarEntradasOverlayFragment">
    <View
        android:id="@+id/backgroundDelOverlayConfirmar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:clickable="false"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="250dp">



        <android.support.v7.widget.CardView
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textAlignment="center"
                    android:text="Estás por publicar entradas para la película:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/tituloFragmentoConfirmarOverlay"
                    android:text="titulo"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textAlignment="center"
                    android:text="En la sala:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/nombreSalaFragmentConfirmarOverlay"
                    android:text="sala"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textAlignment="center"
                        android:text="A las "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/horarioEnOverlayConfirmar"
                        android:textAlignment="center"
                        android:text="00:00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textAlignment="center"
                        android:text=" para el "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fechaEnOverlayConfirmar"
                        android:textAlignment="center"
                        android:text="01-01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />



                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:text="¿Cuántas entradas querés publicar?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    style="?attr/borderlessButtonStyle"
                    android:id="@+id/botonMenos"
                    android:background="#fff"
                    android:text="-"
                    android:textSize="35dp"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />

                <TextView
                    style="?attr/borderlessButtonStyle"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    android:id="@+id/cantidadEntradasFragmentConfirmarOvelay"
                    android:layout_width="50dp"
                    android:text="1"
                    android:inputType="number"
                    android:layout_height="wrap_content" />

                <Button
                    style="?attr/borderlessButtonStyle"
                    android:id="@+id/botonMas"
                    android:background="#fff"
                    android:text="+"
                    android:textSize="25dp"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        style="?attr/borderlessButtonStyle"
                        android:clickable="true"
                        android:id="@+id/confirmarCompartirOverlay"
                        android:text="Confirmar"
                        android:layout_marginLeft="10dp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>



</FrameLayout>
