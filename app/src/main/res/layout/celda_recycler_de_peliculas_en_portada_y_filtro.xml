<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="180dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:elevation="100dp"
        app:cardBackgroundColor="#37474f">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewPrueba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:scaleType="centerCrop"
                android:layout_margin="5dp" />

            <LinearLayout
                android:layout_margin="5dp"
                android:background="#bd000000"
                android:layout_gravity="bottom"
                android:id="@+id/linearAuxiliar"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewTituloPeliculaEnCardViewInicial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="3dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:text="Aca va el titulo y sigue y sigue"
                    android:textColor="#fff"
                    />

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="24dp"
                    android:layout_gravity="bottom|center"
                    android:gravity="bottom|center">

                    <ImageView
                        android:id="@+id/star1"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/grey_star_icon"/>

                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/grey_star_icon" />

                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/grey_star_icon" />

                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/grey_star_icon" />

                    <ImageView
                        android:id="@+id/star5"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/grey_star_icon"/>

                </LinearLayout>

            </LinearLayout>




        </android.support.design.widget.CoordinatorLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>